<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/profile_name_tv"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="65dp"
        android:text="Name will download here" />

    <TextView
        android:id="@+id/profile_status_tv"
        android:layout_width="339dp"
        android:layout_height="219dp"
        android:layout_alignStart="@+id/profile_name_tv"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="180dp"
        android:text="Status will download here" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_name_tv"
        android:layout_alignStart="@+id/profile_name_tv"
        android:layout_marginBottom="-65dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_status_tv"
        android:layout_alignStart="@+id/profile_name_tv"
        android:layout_marginBottom="-180dp"
        android:text="Status" />
</RelativeLayout>